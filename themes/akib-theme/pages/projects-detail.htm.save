-url = "/projects-detail/:slug"
layout = "default"
title = "Layihələr Detal"

[section project]
handle = "projects"
identifier = "slug"
==
{% set record = project.record %}
{% set imgUrls = {
    banner: 'storage/app/media/2440x1578.png',
} %}

{% if project %}
    <!-- Start Project Details -->
    <div class="services-single-area default-padding">
        <div class="container">
            <div class="row">
                <!-- Main content -->
                <div class="services-info col-md-8">
                    {% if project.record.image %}
                        <div class="thumb">
                            <img src="{{ project.record.image|media }}" alt="{{ project.record.title }}">
                        </div>
                    {% endif %}

                    <div class="info">
                        <h2>{{ project.record.title }}</h2>

                        {% if project.record.excerpt %}
                            <div class="excerpt">
                                <p><strong>{{ project.record.excerpt }}</strong></p>
                            </div>
                        {% endif %}

                        {% if project.record.content %}
                            <div class="content">
                                {{ project.record.content|raw }}
                            </div>
                        {% endif %}

                        <div class="back-link" style="margin-top:20px;">
                            <a class="btn btn-theme border btn-sm" href="{{ 'projects'|page }}">
                                <i class="fas fa-angle-double-left"></i>
                                {{ 'Layihələrə qayıt'|_ }}
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Sidebar -->
                <div class="sidebar col-md-4">
                    <!-- Latest 10 Projects -->
                    {% set latest = __SELF__.getLatestProjects(10) %}
                    <div class="sidebar-item link">
                        <div class="title">
                            <h4>Son Layihələr</h4>
                        </div>
                        <ul>
                            {% for p in latest %}
                                <li class="{{ p.slug == record.slug ? 'active' : '' }}">
                                    <a href="{{ 'projects-detail'|page({ slug: p.slug }) }}">
                                        {{ p.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <!-- CTA Block -->
                    <div class="sidebar-item contact address"
                         style="background-image: url('storage/app/media/800x850.png');">
                        <div class="title">
                            <h4>İndi Üzv Ol!</h4>
                        </div>
                        <ul>
                            <li>Əgər sən də layihələrimizə qoşulmaq istəyirsənsə<br>ÜZV OL!</li>
                            <li><a href="tel:+994000000000">+994 00 000 00 00</a></li>
                            <li><a href="mailto:info@yourdomain.com">info@yourdomain.com</a></li>
                        </ul>
                        <a href="{{ 'contact'|page }}" class="btn circle btn-theme border btn-md">Üzv Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Project Details -->
{% else %}
    <!-- Project Not Found -->
    <div class="page-title-area shadow dark bg-fixed text-center text-light"
         style="background-image: url('{{ imgUrls.banner }}');">
        <div class="container">
            <h1>{{ 'Layihə tapılmadı'|_ }}</h1>
        </div>
    </div>
    <div class="container" style="padding:40px 0;">
        <div class="alert alert-warning">
            <h4>{{ 'Layihə tapılmadı'|_ }}</h4>
            <p>{{ 'Axtardığınız layihə mövcud deyil və ya silinib.'|_ }}</p>
            <a class="btn btn-theme border btn-sm" href="{{ 'projects'|page }}">
                {{ 'Layihələrə qayıt'|_ }}
            </a>
        </div>
    </div>
{% endif %}
